<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_imageview_detail_desk_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#bc8f8f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/detail_desl_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/user_imageview_detail_desk_comment"
        app:layout_constraintTop_toTopOf="@+id/user_imageview_detail_desk_comment" />

    <TextView
        android:id="@+id/detail_desk_sendComment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_color_white"
        android:maxWidth="270dp"
        android:padding="5dp"
        android:text="111111111111111111111111111111111111111111"
        app:layout_constraintStart_toEndOf="@+id/user_imageview_detail_desk_comment"
        app:layout_constraintTop_toBottomOf="@+id/detail_desl_comment_username" />

    <TextView
        android:id="@+id/detail_desl_comment_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/detail_desl_comment_username"
        app:layout_constraintTop_toTopOf="@+id/detail_desl_comment_username" />
</androidx.constraintlayout.widget.ConstraintLayout>